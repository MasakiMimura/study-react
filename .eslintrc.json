{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"extends": ["next/core-web-vitals"],
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"no-undef": ["error"]
	}
}
